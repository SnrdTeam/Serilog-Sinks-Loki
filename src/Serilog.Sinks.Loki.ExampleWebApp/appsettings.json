{
  // Настройки для Serilog
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.Loki" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Warning"
      }
    },
    //"Enrich": [ "FromLogContext" ],
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss} {Level} [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}"
        }
      },
      {
        "Name": "LokiHttp",
        "Args": {
          "credentials": {
            "Url": "http://192.168.43.30:3100"
          },
          "logLabels": [
            {
              "Key": "app",
              "Value": "lokiExample"
            }
          ]
        }
      }
    ]
  },
  "AllowedHosts": "*"
}
